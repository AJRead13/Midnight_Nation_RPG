# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/midnight_nation_rpg
# For MongoDB Atlas, use:
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/midnight_nation_rpg?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# Server Configuration
PORT=5000
NODE_ENV=development

# Client URL (for CORS)
CLIENT_URL=http://localhost:5173

# Email Configuration
# Leave these blank for local development (emails will log to console instead)

# SMTP Host (e.g., smtp.gmail.com, smtp.sendgrid.net, email-smtp.us-east-1.amazonaws.com)
EMAIL_HOST=

# SMTP Port (usually 587 for TLS, 465 for SSL)
EMAIL_PORT=587

# Use TLS/SSL (true for port 465, false for port 587 with STARTTLS)
EMAIL_SECURE=false

# SMTP Username (your email account or API username)
EMAIL_USER=

# SMTP Password (your email password or API key)
EMAIL_PASS=

# From Email Address (must be authorized by your SMTP provider)
EMAIL_FROM=Midnight Nation RPG <noreply@midnightnation.com>


# === SMTP Provider Setup Instructions ===

# Gmail:
# 1. Enable 2-factor authentication on your Google account
# 2. Generate an App Password: https://myaccount.google.com/apppasswords
# 3. Use these settings:
#    EMAIL_HOST=smtp.gmail.com
#    EMAIL_PORT=587
#    EMAIL_SECURE=false
#    EMAIL_USER=your-email@gmail.com
#    EMAIL_PASS=your-app-password
#    EMAIL_FROM=Your Name <your-email@gmail.com>

# SendGrid:
# 1. Sign up at https://sendgrid.com
# 2. Create an API key in Settings > API Keys
# 3. Use these settings:
#    EMAIL_HOST=smtp.sendgrid.net
#    EMAIL_PORT=587
#    EMAIL_SECURE=false
#    EMAIL_USER=apikey
#    EMAIL_PASS=your-sendgrid-api-key
#    EMAIL_FROM=Your Name <verified-sender@yourdomain.com>

# AWS SES:
# 1. Set up SES in AWS Console
# 2. Create SMTP credentials
# 3. Use these settings:
#    EMAIL_HOST=email-smtp.us-east-1.amazonaws.com
#    EMAIL_PORT=587
#    EMAIL_SECURE=false
#    EMAIL_USER=your-smtp-username
#    EMAIL_PASS=your-smtp-password
#    EMAIL_FROM=Your Name <verified@yourdomain.com>

# Ethereal Email (Testing Only - creates temporary test inbox):
# 1. Visit https://ethereal.email/create
# 2. Use the generated credentials (valid for a few hours)
# 3. Click the provided URL to view sent emails in test inbox
